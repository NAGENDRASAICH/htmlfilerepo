pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository
                git 'your_repository_url_here'
            }
        }
        
        stage('Build and Test') {
            steps {
                // Here you can perform any build and test operations
                // For simplicity, let's just print a success message
                echo 'Build and Test successful!'
            }
        }
        
        stage('Generate Artifact') {
            steps {
                // Here you can generate your artifact, e.g., archive the HTML file
                archiveArtifacts artifacts: '1.html', onlyIfSuccessful: true
                echo 'Artifact generated successfully!'
            }
        }
    }
    
    post {
        success {
            // Print a success message if the pipeline completes successfully
            echo 'Pipeline completed successfully!'
        }
    }
}

